<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation='vertical'
    tools:context=".MainActivity">

    <TextView
        style="@style/title"
        android:text='@string/first_title' />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation='horizontal'>

        <Button
            style="@style/change_number_button"
            android:onClick="decrement"
            android:text='@string/decrement' />

        <TextView
            android:id='@+id/quantity_text_view'
            style="@style/number_value"
            android:paddingLeft="@dimen/choose_number_size"
            android:paddingRight="@dimen/choose_number_size"
            android:text="@string/number" />

        <Button
            style="@style/change_number_button"
            android:onClick="increment"
            android:text='@string/increment' />

    </LinearLayout>

    <TextView
        style="@style/title.2"
        android:text="@string/second_title" />

    <TextView
        android:id='@+id/price_text_view'
        style='@style/number_value'
        android:text='@string/price' />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size"
        android:onClick="submitOrder"
        android:text='@string/button_text' />


</LinearLayout>
